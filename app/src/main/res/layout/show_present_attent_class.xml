<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
           android:id="@+id/show_dao_people"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
    		<LinearLayout
        		android:id="@+id/LinearLayout_banner"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal" >

        	<Button
            	android:id="@+id/btnScort"
            	android:layout_width="match_parent"
           		 android:layout_height="wrap_content"
           	 	android:layout_margin="0dp"
           	 	android:layout_weight="1"
           	 	android:textColor="#FFFFFF"
            	android:background="@drawable/yidao"
            	android:text="本次上课已到成员名单" />
    	</LinearLayout> 
     	<LinearLayout
        android:id="@+id/LinearLayout_banner111"
        android:layout_width="fill_parent"
        android:layout_below="@id/LinearLayout_banner"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
     	>
       		 <TextView 
        	android:id="@+id/show_tv1"
        	android:layout_height="50dp"
        	android:layout_width="90dp"
        	android:background="@drawable/table_title"
       	 	android:gravity="center"
        	android:text="学号"
       	 	android:textStyle="bold"
        	android:textColor="#777777"
       		 />
        	<TextView 
        	android:id="@+id/show_tv2"
        	android:layout_height="50dp"
        	android:layout_width="90dp"
        	android:background="@drawable/table_title"
        	android:layout_toRightOf="@id/show_tv1"
         	android:gravity="center"
         	android:text="姓名"
         	android:textColor="#777777"
         	 android:textStyle="bold"
        	/>
     		<TextView 
       	 	android:id="@+id/show_tv3"
        	android:layout_height="50dp"
        	android:layout_width="90dp"
        	android:background="@drawable/table_title"
        	android:layout_toRightOf="@id/show_tv2"
         	android:gravity="center"
        	 android:text="小组编号"
         	android:textColor="#777777"
          	android:textStyle="bold"
       	 />
     		<TextView 
        	android:id="@+id/show_tv4"
       	 	android:layout_height="50dp"
        	android:layout_width="90dp"
        	android:background="@drawable/table_title"
        	android:layout_toRightOf="@id/show_tv3"
         	android:gravity="center"
         	android:textColor="#777777"
        	android:text="签到日期"
         	android:textStyle="bold"
        	/>
    	</LinearLayout>
      <ListView
        android:id="@+id/lv"
        android:layout_width="fill_parent"
        android:layout_height="300dip" >
    </ListView>
    </LinearLayout>
    <!-- 未到人数的XML -->
    <LinearLayout
           android:id="@+id/show_Weidao_people"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@id/show_dao_people"
           android:orientation="vertical"
           >
    		<LinearLayout
        		android:id="@+id/LinearLayout_banner2"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal" >

        	<Button
            	android:id="@+id/btnScort2"
            	android:layout_width="match_parent"
           		 android:layout_height="wrap_content"
           	 	android:layout_margin="0dp"
           	 	android:layout_weight="1"
           	 	android:textColor="#FFFFFF"
            	android:background="@drawable/weidao"
            	android:text="本次上课未到成员名单" />
    	</LinearLayout> 
     	<LinearLayout
        android:id="@+id/LinearLayout_banner1112"
        android:layout_width="fill_parent"
        android:layout_below="@id/LinearLayout_banner2"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
     	>
       		 <TextView 
        	android:id="@+id/show_tv12"
        	android:layout_height="50dp"
        	android:layout_width="90dp"
        	android:background="@drawable/table_title"
       	 	android:gravity="center"
        	android:text="学号"
       	 	android:textStyle="bold"
        	android:textColor="#777777"
       		 />
        	<TextView 
        	android:id="@+id/show_tv22"
        	android:layout_height="50dp"
        	android:layout_width="90dp"
        	android:background="@drawable/table_title"
        	android:layout_toRightOf="@id/show_tv12"
         	android:gravity="center"
         	android:text="姓名"
         	android:textColor="#777777"
         	 android:textStyle="bold"
        	/>
     		<TextView 
       	 	android:id="@+id/show_tv32"
        	android:layout_height="50dp"
        	android:layout_width="90dp"
        	android:background="@drawable/table_title"
        	android:layout_toRightOf="@id/show_tv22"
         	android:gravity="center"
        	 android:text="小组编号"
         	android:textColor="#777777"
          	android:textStyle="bold"
       	 />
     		<TextView 
        	android:id="@+id/show_tv42"
       	 	android:layout_height="50dp"
        	android:layout_width="90dp"
        	android:background="@drawable/table_title"
        	android:layout_toRightOf="@id/show_tv32"
         	android:gravity="center"
         	android:textColor="#777777"
        	android:text="签到日期"
         	android:textStyle="bold"
        	/>
    	</LinearLayout>
      <ListView
        android:id="@+id/lv1"
        android:layout_width="fill_parent"
        android:layout_height="300dip" >
    </ListView>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>